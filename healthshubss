<script>
  function handleSubmit(event) {
    event.preventDefault();
    const form = event.target;
    const responseEl = document.getElementById('form-response');

    // Simple form validation already handled by 'required' fields

    // Simulate sending form data (since no backend)
    setTimeout(() => {
      responseEl.textContent = 'Thank you, ' + form.name.value + '! Your message has been received.';
      form.reset();
    }, 600);

    return false;
  }
</script>

